<div class="col-lg-10 col-lg-offset-3">
<div class=" block-login-form">
        <h2>Update Details</h2>
        <form action="/update" method="POST">

            <div class=" block-group">
                <label>College ID:</label>
                <div class="block">
                    <i class="fa fa-user"></i>
                    <input type="text"  placeholder="College ID" name="cid" required="required" />
                </div>
            </div>
            <div class=" block-group">
                <label>Roll No.:</label>
                <div class="block">
                    <i class="fa fa-key"></i>
                    <input type="number"  placeholder="Roll No." name="roll" required="required" />
                </div>
            </div>
            <div class=" block-group">
                <label>Tenth Score (CGPA/%):</label>
                <div class="block">
                    <i class="fa fa-key"></i>
                    <input type="number"  placeholder="Tenth Score (CGPA/%)" name="tenthMarks" required="required" />
                </div>
            </div>
            <div class=" block-group">
                <label>Twelvth Marks:</label>
                <div class="block">
                    <i class="fa fa-key"></i>
                    <input type="number"  placeholder="Twelvth Marks" name="twelvthMarks" required="required" />
                </div>
            </div>
            <button type="submit">Update</button>
        </form>
    </div>


